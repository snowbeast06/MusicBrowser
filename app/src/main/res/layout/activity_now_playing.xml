<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorSecondaryLight"
    tools:context="com.example.android.musicbrowser.NowPlayingActivity">

    <ImageView
        android:id="@+id/now_playing_album_ImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        tools:src="@drawable/purplerain" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/now_playing_song_name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="32sp"
            android:textStyle="bold"
            tools:text="I Would Die 4 U" />

        <TextView
            android:id="@+id/now_playing_artist_name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:text="Prince" />

        <TextView
            android:id="@+id/now_playing_album_name_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="italic"
            tools:text="Purple Rain" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:minHeight="70dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/reverse_button"
                android:layout_width="@dimen/small_button_width"
                android:layout_height="@dimen/small_button_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_reverse"
                android:layout_marginRight="10dp" />

            <ImageView
                android:id="@+id/play_pause_button"
                android:layout_width="@dimen/large_button_width"
                android:layout_height="@dimen/large_button_height"
                android:src="@drawable/ic_pause"
                android:gravity="center" />

            <ImageView
                android:id="@+id/next_button"
                android:layout_width="@dimen/small_button_width"
                android:layout_height="@dimen/small_button_height"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_fforward"
                android:layout_marginLeft="10dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Albums"
                android:id="@+id/now_playing_back_to_albums"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Back to Tracks"
                android:id="@+id/now_playing_back_to_tracks"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>